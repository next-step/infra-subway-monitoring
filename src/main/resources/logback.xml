<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">
    <timestamp key="BY_DATE" datePattern="yyyy-MM-dd"/>
    <timestamp key="BY_SECONDS" datePattern="yyyy-MM-dd'T'HH_mm_ss"/>
    <property name="LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss}:%-4relative] %green([%thread]) %highlight(%-5level) %boldWhite([%C.%M:%yellow(%L)]) - %msg%n"/>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <springProfile name="local">
        <include resource="console-appender.xml"/>
        <root level="INFO">
            <appender-ref ref="console"/>
        </root>

    </springProfile>

    <springProfile name="test">
        <include resource="test-appender.xml"/>
        <root level="INFO">
            <appender-ref ref="TEST_LOG"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <include resource="prod-info-appender.xml"/>
        <include resource="prod-debug-appender.xml"/>
        <include resource="prod-error-appender.xml"/>

        <root level="INFO">
            <appender-ref ref="PROD_INFO_LOG"/>
            <appender-ref ref="PROD_DEBUG_LOG"/>
            <appender-ref ref="PROD_ERROR_LOG"/>
        </root>

    </springProfile>
</configuration>
